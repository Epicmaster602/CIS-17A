{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C/C++: cl.exe build active file",
      "type": "shell",
      "command": "cl",
      "options": {
        "cwd": "${fileDirname}"
      },
      "args": [
        "/nologo",
        "/EHsc",
        "/std:c++17",
        "/W4",
        "${file}",
        "/Fe:${fileBasenameNoExtension}.exe"
      ],
      "problemMatcher": ["$msCompile"],
      "group": { "kind": "build", "isDefault": true }
    }
  ]
}
